<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<!-- fx:controller="패키지명.파일명" 으로 controller를 설정 -->
<BorderPane fx:controller="basic.M_ComboGugudanController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="280.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
         	<!-- fx:id="변수명" 으로 해당 컨트롤러의 id를 설정 -->
            <ComboBox fx:id="cmbDan" prefWidth="150.0" />
            <!-- 버튼에 대한 이벤트처리는 onAction="#메서드명" 으로 설정 -->
            <Button fx:id="btnDan" onAction="#buttonClicked" mnemonicParsing="false" text="출력" />
         </children>
      </HBox>
   </top>
   <center>
      <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TextArea>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
